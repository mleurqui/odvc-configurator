
entity Options {
	value String
    description String
    image String
    createdAt Instant
    updatedAt Instant
}

entity Steps {
	title String
    description String
    image String
    componentType String
    createdAt Instant
    updatedAt Instant
}

entity Models {
	name String
	brand String
	description String
	defaultPromiseDelay Integer
    maxPromiseDelay Integer
    createdAt Instant
    updatedAt Instant
}

entity Components {
	sku String
	name String
	brand String
    weight Double
    price Double
	description String
    descriptionLong String
    image2d String
    image3d String
	replenishementDays Integer
    componentType String
    createdAt Instant
    updatedAt Instant
}

entity Configurations {
	name String
	createdAt Instant
    updatedAt Instant
}

entity Users {
	uuid String
    mail String
    createdAt Instant
    updatedAt Instant
}

relationship ManyToMany {
  Model{step} to Step{model}
  Step{component} to Component{step}
}

relationship ManyToOne {
  Step{option} to Option{step}
  User{configuration} to Configuration{user}
}

// Use Data Transfer Objects (DTO)
dto * with mapstruct

// Set service options to all except few
service all with serviceImpl

